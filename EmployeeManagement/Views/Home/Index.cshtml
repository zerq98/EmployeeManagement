@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employees";
}

    <div class="card-deck">
        @foreach (var employee in Model)
        {
            var photoPath = "~/Images/" + (employee.PhotoPath ?? "noimage.jpg");

            <div class="card m-3">
                <div class="card-header">
                    <h1>@employee.Name</h1>
                </div>
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>